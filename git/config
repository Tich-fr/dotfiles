[user]
	name = Timothee Chabat
	email = timothee.chabat@kitware.com
	username = timothee.chabat
[core]
	editor = helix
	whitespace = -indent-with-non-tab,trailing-space,cr-at-eol
	excludesFile = ~/.config/git/gitignore
[diff]
	external = difft
[color]
	ui = auto
[merge]
	tool = vimdiff
[alias]
	sub = submodule update --recursive --init
	clean-clone = clone --depth 1 --recursive --shallow-submodules --branch
	purge-merged = "!sh -c 'git branch --merged $0 | grep -v \"^[ *]*\"$0\"$\" | vipe | xargs git branch -d'"
	recap = "!git log --oneline --graph $(basename $(git symbolic-ref --short refs/remotes/origin/HEAD)).."
	fix = "!git log --pretty=format:'%h %s' $(basename $(git symbolic-ref --short refs/remotes/origin/HEAD)).. | fzf --layout=reverse --preview='git --no-pager show --color=always --stat {+1}'| cut -d ' ' -f1 | xargs -o git commit --fixup"
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
